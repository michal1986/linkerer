{% extends 'base.html.twig' %}

{% block title %}URL Shortener{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 bg-blue-600">
                <h1 class="text-2xl font-bold text-white text-center">URL Shortener</h1>
            </div>
            
            <div class="p-6 text-center">
                <p class="text-lg mb-4">Welcome to URL Shortener</p>
                <div class="space-x-4">
                    <a href="{{ path('app_create_link') }}" class="btn btn-primary">
                        Create Short Link
                    </a>
                    <a href="{{ path('app_links_table') }}" class="btn btn-ghost">
                        View All Links
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 